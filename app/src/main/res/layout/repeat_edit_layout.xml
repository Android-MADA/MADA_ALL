<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">
        <LinearLayout
            android:id="@+id/repeat_edit_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/repeat_edit_back_tv"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:src="@drawable/todo_back_arrow"
                android:layout_marginStart="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:text="반복 투두"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                />

            <TextView
                android:id="@+id/repeat_submit_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="등록"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_gravity="center_vertical"
                android:paddingHorizontal="15dp"
                android:gravity="center_vertical"
                />

        </LinearLayout>

        <EditText
            android:id="@+id/repeat_todo_title_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:hint="제목"
            android:textStyle="bold"
            android:textColor="@color/grey3"
            android:background="@null"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="30dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="16dp"
            android:background="#F0F0F0"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="20dp">

            <TextView
                android:id="@+id/todo_repeat_start_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="시작일"
                android:textColor="@color/black"
                />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                />

            <TextView
                android:id="@+id/todo_repeat_startday_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="없음"
                android:textColor="#A6A6A6"
                />
        </LinearLayout>
<!--       달력 추가-->

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="16dp"
            android:background="#F0F0F0"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="20dp">

            <TextView
                android:id="@+id/todo_repeat_end_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="종료일"
                android:textColor="@color/black"
                />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                />

            <TextView
                android:id="@+id/todo_repeat_endday_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="없음"
                android:textColor="#A6A6A6"
                />
        </LinearLayout>

        <!--       달력 추가-->

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="16dp"
            android:background="#F0F0F0"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="20dp">

            <ImageView
                android:id="@+id/repeat_iv"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_home_repeat"
                />

            <TextView
                android:id="@+id/repeat_repeat_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="매일"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginStart="16dp"
                android:textStyle="bold"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/repeat_type_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="20dp"
            >

            <TextView
                android:id="@+id/repeat_type_day_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="매일"
                android:textColor="@color/black"
                android:layout_marginEnd="20dp"
                android:paddingVertical="10dp"
                android:paddingHorizontal="20dp"
                android:background="@drawable/home_repeat_selected_background"
                />

            <TextView
                android:id="@+id/repeat_type_week_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="매주"
                android:textColor="@color/black"
                android:layout_marginEnd="20dp"
                android:paddingVertical="10dp"
                android:paddingHorizontal="20dp"
                android:background="@drawable/home_reapeat_unselected_background"
                />

            <TextView
                android:id="@+id/repeat_type_month_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="매월"
                android:textColor="@color/black"
                android:paddingVertical="10dp"
                android:paddingHorizontal="20dp"
                android:background="@drawable/home_reapeat_unselected_background"
                />

        </LinearLayout>

        <GridLayout
            android:id="@+id/repeat_week_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:rowCount="1"
            android:columnCount="7"
            android:orientation="horizontal"
            android:layout_marginHorizontal="15dp"
            android:background="@drawable/repeat_week_background"
            >
            <TextView
                android:id="@+id/repeat_week_mon_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="월"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="16sp"
                android:padding="12dp"
                android:layout_columnWeight="1"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:background="@drawable/repeat_week_selected_bakcground"
                />
            <TextView
                android:id="@+id/repeat_week_tue_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="화"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="16sp"
                android:padding="12dp"
                android:layout_columnWeight="1"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                />
            <TextView
                android:id="@+id/repeat_week_wed_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="수"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="16sp"
                android:padding="12dp"
                android:layout_columnWeight="1"
                android:layout_margin="5dp"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/repeat_week_thu_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="목"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="16sp"
                android:padding="12dp"
                android:layout_columnWeight="1"
                android:layout_margin="5dp"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/repeat_week_fri_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="금"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="16sp"
                android:padding="12dp"
                android:layout_columnWeight="1"
                android:layout_margin="5dp"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/repeat_week_sat_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="토"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="16sp"
                android:padding="12dp"
                android:layout_columnWeight="1"
                android:layout_margin="5dp"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/repeat_week_sun_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="일"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="16sp"
                android:padding="12dp"
                android:layout_columnWeight="1"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                />
        </GridLayout>
        <!--       달력 추가-->

    </LinearLayout>
</layout>
