<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/titleLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/sub3"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/calendar_arrow_left"
            android:tint="@color/white"
            android:background="@android:color/transparent"/>



        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="     D-Day" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/addBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:text="등록"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_marginHorizontal="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >



            <TextView
                android:id="@+id/textDday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="50dp"
                android:gravity="center"
                android:textSize="32sp"
                android:fontFamily="@font/pretendard"
                android:textStyle="bold"
                android:textColor="@color/sub3"
                android:text="D-0" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"
                android:layout_marginVertical="15dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/textTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:ems="12"
                    android:hint="디데이 제목"
                    android:importantForAutofill="no"
                    android:inputType="text"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/calendar_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="0"
                    android:scaleType="fitCenter"
                    app:tint="@color/sub3"
                    android:src="@drawable/calendar_color_select" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_color_selector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/calendar_color1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_home_color_selector_28"
                        app:tint="#ED3024" />

                    <ImageButton
                        android:id="@+id/calendar_color2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_home_color_selector_28"
                        app:tint="#F65F55" />

                    <ImageButton
                        android:id="@+id/calendar_color3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_home_color_selector_28"
                        app:tint="#FD8415" />

                    <ImageButton
                        android:id="@+id/calendar_color4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_home_color_selector_28"
                        app:tint="#FEBD16" />

                    <ImageButton
                        android:id="@+id/calendar_color5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_home_color_selector_28"
                        app:tint="#FBA1B1" />

                    <ImageButton
                        android:id="@+id/calendar_color6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_home_color_selector_28"
                        app:tint="#F46D85" />
                    <ImageButton
                        android:id="@+id/calendar_color7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_home_color_selector_28"
                        app:tint="#D087F2" />
                    <ImageButton
                        android:id="@+id/calendar_color8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_home_color_selector_28"
                        app:tint="#A516BC" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/calendar_color9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_home_color_selector_28"
                        app:tint="@color/main" />

                    <ImageButton
                        android:id="@+id/calendar_color10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_home_color_selector_28"
                        app:tint="#269CB1" />

                    <ImageButton
                        android:id="@+id/calendar_color11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_home_color_selector_28"
                        app:tint="#3C67A7" />

                    <ImageButton
                        android:id="@+id/calendar_color12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_home_color_selector_28"
                        app:tint="@color/sub2" />

                    <ImageButton
                        android:id="@+id/calendar_color13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_home_color_selector_28"
                        app:tint="#C0D979" />

                    <ImageButton
                        android:id="@+id/calendar_color14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_home_color_selector_28"
                        app:tint="#8FBC10" />
                    <ImageButton
                        android:id="@+id/calendar_color15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_home_color_selector_28"
                        app:tint="#107E3D" />
                    <ImageButton
                        android:id="@+id/calendar_color16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_home_color_selector_28"
                        app:tint="#0E4122" />
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"
                android:layout_marginVertical="15dp"/>

            <LinearLayout
                android:layout_marginHorizontal="10dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/calendar_calendar_image" />


                <TextView
                    android:id="@+id/nextScheldule"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:background="@android:color/transparent"
                    android:gravity="center"
                    android:text="2023년 6월 9일 (금)"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/timePicker"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:orientation="horizontal"
                android:visibility="visible">

                <com.shawnlin.numberpicker.NumberPicker
                    android:id="@+id/number_picker1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    app:np_dividerThickness="1dp"
                    android:layout_marginHorizontal="20dp"
                    app:np_formatter="%d"
                    app:np_height="180dp"
                    app:np_max="9999"
                    app:np_min="0"
                    app:np_selectedTextColor="@color/black"
                    app:np_selectedTextSize="24sp"
                    app:np_textColor="@color/grey3"
                    app:np_textSize="24sp"
                    app:np_value="2023"
                    app:np_width="64dp"
                    android:layout_weight="1"
                    app:np_wrapSelectorWheel="false" />

                <com.shawnlin.numberpicker.NumberPicker
                    app:np_dividerThickness="1dp"
                    android:id="@+id/number_picker2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginHorizontal="20dp"
                    app:np_height="180dp"
                    app:np_max="12"
                    app:np_min="1"
                    app:np_selectedTextColor="@color/black"
                    app:np_selectedTextSize="24sp"
                    app:np_textColor="@color/grey3"
                    app:np_textSize="24sp"
                    app:np_value="1"
                    app:np_width="64dp"
                    android:layout_weight="1"
                    app:np_wrapSelectorWheel="true" />


                <com.shawnlin.numberpicker.NumberPicker
                    app:np_dividerThickness="1dp"
                    android:layout_weight="1"
                    android:id="@+id/number_picker3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginHorizontal="20dp"
                    app:np_height="180dp"
                    app:np_max="31"
                    app:np_min="1"
                    app:np_selectedTextColor="@color/black"
                    app:np_selectedTextSize="24sp"
                    app:np_textColor="@color/grey3"
                    app:np_textSize="24sp"
                    app:np_value="1"
                    app:np_width="64dp"
                    app:np_wrapSelectorWheel="true" />

            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:layout_marginBottom="300dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:scaleType="fitCenter"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/calendar_memo" />

                <EditText
                    android:id="@+id/textMemo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:ems="12"
                    android:hint="메모"
                    android:inputType="text"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:importantForAutofill="no" />

            </LinearLayout>
            <TextView
                android:visibility="gone"
                android:id="@+id/textBlank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</LinearLayout>