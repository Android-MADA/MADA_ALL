<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E1E9F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/preBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="#E1E9F5"

                app:srcCompat="@drawable/calendar_arrow_left" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textYear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2023년"
                    android:textAlignment="center"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/textMonth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="6월"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="25dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/nextBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="#E1E9F5"
                app:srcCompat="@drawable/calendar_arrow_right" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textSun"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="S"
                android:textAlignment="center"
                android:textColor="#D92437"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textMon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="M"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textTue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="T"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textWed"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="W"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textThu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="T"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textFri"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="F"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textSat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="S"
                android:textAlignment="center"
                android:textColor="#0041A3"
                android:textSize="25sp"
                android:textStyle="bold" />
        </LinearLayout>

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_marginHorizontal="15dp"
            android:background="?android:attr/listDivider" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/calendar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp" />

    </LinearLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:background="@drawable/calendar_dday_background"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <TextView
            android:id="@+id/textDday"
            app:layout_constraintTop_toTopOf="@id/bottom_sheet"
            app:layout_constraintLeft_toLeftOf="@id/bottom_sheet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:text="My D-Day"
            android:textColor="#0041A3"
            android:textSize="22dp"
            android:textStyle="bold" />
        <View
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/textDday"
            android:background="?android:attr/listDivider" />
        <ImageView
            android:id="@+id/dday1"
            android:layout_width="180dp"
            android:layout_height="48dp"
            android:layout_marginHorizontal="30dp"
            android:layout_margin="15dp"
            app:layout_constraintLeft_toLeftOf="@id/bottom_sheet"
            app:layout_constraintTop_toBottomOf="@id/line1"
            android:src="@drawable/calendar_dday_plus"/>
        <ImageView
            android:id="@+id/dday2"
            android:layout_width="180dp"
            android:layout_height="48dp"
            android:layout_marginHorizontal="30dp"
            android:layout_margin="15dp"
            app:layout_constraintLeft_toLeftOf="@id/bottom_sheet"
            app:layout_constraintTop_toBottomOf="@id/dday1"
            android:src="@drawable/calendar_dday_plus"/>
        <ImageView
            android:id="@+id/dday3"
            android:layout_width="180dp"
            android:layout_height="48dp"
            android:layout_marginHorizontal="30dp"
            android:layout_margin="15dp"
            app:layout_constraintLeft_toLeftOf="@id/bottom_sheet"
            app:layout_constraintTop_toBottomOf="@id/dday2"
            android:src="@drawable/calendar_dday_plus"/>
        <ImageView
            android:id="@+id/dday_char"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginHorizontal="30dp"
            android:layout_margin="15dp"
            app:layout_constraintRight_toRightOf="@id/bottom_sheet"
            app:layout_constraintTop_toBottomOf="@id/line1"
            android:src="@drawable/calendar_character"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>