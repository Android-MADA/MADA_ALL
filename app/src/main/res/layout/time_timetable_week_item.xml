<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/timetable_bg"
        android:layout_width="120dp"
        android:layout_height="match_parent"
        android:src="@drawable/time_week_10"
        app:tint="@color/sub2" />

    <TextView
        android:layout_marginLeft="9dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/timetable_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="등교하기"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <TextView
        android:textSize="11sp"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@+id/timetable_title_tv"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/timetable_memo_tv"
        android:layout_width="120dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_height="wrap_content"
        android:text="데이터adsadsasdadsadssdasadasddsaasd분"
        android:textColor="@color/white" />
</androidx.constraintlayout.widget.ConstraintLayout>