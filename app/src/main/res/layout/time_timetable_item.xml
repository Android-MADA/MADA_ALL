<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/timetable_bg"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:tint="@color/sub2"
        android:src="@drawable/calendar_dday_popup_size" />

    <TextView
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/timetable_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="등교하기"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <TextView
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@+id/timetable_title_tv"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/timetable_memo_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="데이터분석기초 수업, 한울관 101호"
        android:textColor="@color/white" />
</androidx.constraintlayout.widget.ConstraintLayout>