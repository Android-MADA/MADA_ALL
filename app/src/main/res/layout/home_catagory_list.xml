<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_home_viewpager_cate_list"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/ic_home_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_home_cate_plan"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="3dp"
        />
    <TextView
        android:id="@+id/tv_home_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="약속"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginStart="3dp"
        app:layout_constraintTop_toTopOf="@id/ic_home_category"
        app:layout_constraintBottom_toBottomOf="@id/ic_home_category"
        app:layout_constraintStart_toEndOf="@id/ic_home_category"
        />
    <ImageButton
        android:id="@+id/btn_home_add_todo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/home_baseline_add_24"
        android:backgroundTint="#ffffff"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@+id/layout_home_todo_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ic_home_category"
        android:orientation="horizontal"
        android:layout_marginEnd="41dp"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/home_checkbox_symbol_unchecked"
            android:layout_gravity="center_vertical"
            />
        <EditText
            android:id="@+id/edt_home_viewpager2_todo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="추가하기"

            />
    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_home_todo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_home_todo_add"
        />

</androidx.constraintlayout.widget.ConstraintLayout>