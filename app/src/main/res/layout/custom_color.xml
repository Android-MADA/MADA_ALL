<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TableLayout
        android:id="@+id/custom_menutable"
        android:layout_width="360dp"
        android:layout_height="75dp"
        app:behavior_peekHeight="78dp"
        android:background="@drawable/custom_radius"
        android:orientation="vertical"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:behavior_hideable="true"

        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <TableRow>

            <Button
                android:id="@+id/btn_color"
                android:layout_marginLeft="7dp"
                android:layout_width="75dp"
                android:background="#00FF0000"
                android:text="색깔"
                android:textColor="#000000"
                android:textSize="20dp"/>

            <Button
                android:id="@+id/btn_hat"
                android:layout_marginLeft="15dp"
                android:layout_width="75dp"
                android:background="#00FF0000"
                android:text="모자"
                android:textColor="#000000"
                android:textSize="20dp"/>


            <Button
                android:id="@+id/btn_item"
                android:layout_width="75dp"
                android:layout_marginLeft="15dp"
                android:background="#00FF0000"
                android:text="소품"
                android:textColor="#000000"
                android:textSize="20dp"/>

            <Button
                android:id="@+id/btn_background"
                android:layout_marginLeft="15dp"
                android:layout_width="75dp"
                android:layout_marginRight="7dp"
                android:background="#00FF0000"
                android:text="배경"
                android:textColor="#000000"
                android:textSize="20dp"/>


        </TableRow>
    </TableLayout>

    <TableLayout
        android:id="@+id/custom_colortable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <TableRow>

            <ImageButton
                android:id="@+id/btn_color_basic"

                android:layout_width="99dp"
                android:layout_height="72dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="27dp"
                android:background="@drawable/custom_radius"></ImageButton>

            <ImageButton
                android:id="@+id/btn_color_blue"
                android:layout_width="99dp"
                android:layout_height="72dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="27dp"
                android:background="@drawable/custom_radius"></ImageButton>

            <ImageButton
                android:layout_width="99dp"
                android:id="@+id/btn_color_green"
                android:layout_height="72dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="27dp"
                android:background="@drawable/custom_radius"></ImageButton>

        </TableRow>

        <TableRow>

            <ImageButton
                android:id="@+id/btn_color_Rblue"

                android:layout_width="99dp"
                android:layout_height="72dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="27dp"
                android:background="@drawable/custom_radius"></ImageButton>

            <ImageButton
                android:id="@+id/btn_color_bluepurple"
                android:layout_width="99dp"
                android:layout_height="72dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="27dp"
                android:background="@drawable/custom_radius"></ImageButton>

            <ImageButton
                android:layout_width="99dp"
                android:id="@+id/btn_color_orange"
                android:layout_height="72dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="27dp"
                android:background="@drawable/custom_radius"></ImageButton>

        </TableRow>

        <TableRow>

            <ImageButton
                android:id="@+id/btn_color_yellow"

                android:layout_width="99dp"
                android:layout_height="72dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="27dp"
                android:background="@drawable/custom_radius"></ImageButton>

            <ImageButton
                android:id="@+id/btn_color_purple"
                android:layout_width="99dp"
                android:layout_height="72dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="27dp"
                android:background="@drawable/custom_radius"></ImageButton>

            <ImageButton
                android:layout_width="99dp"
                android:id="@+id/btn_color_pink"
                android:layout_height="72dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="27dp"
                android:background="@drawable/custom_radius"></ImageButton>

        </TableRow>

    </TableLayout>
</LinearLayout>

