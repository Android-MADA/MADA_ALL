<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <ScrollView
        android:id="@+id/CustomScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <TableLayout
        android:id="@+id/custom_colortable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <TableRow>

            <ImageButton
                android:id="@+id/btn_color_basic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:layout_margin="10dp"
                android:src="@drawable/color_basic"></ImageButton>

            <ImageButton
                android:id="@+id/btn_color_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:layout_margin="10dp"
                android:src="@drawable/color_blue"></ImageButton>

            <ImageButton
                android:id="@+id/btn_color_green"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:layout_margin="10dp"
                android:src="@drawable/color_green"></ImageButton>

        </TableRow>

        <TableRow>

            <ImageButton
                android:id="@+id/btn_color_Rblue"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="28dp"
                android:background="#FFFFFF"
                android:layout_marginTop="20dp"
                android:src="@drawable/color_rblue"></ImageButton>

            <ImageButton
                android:id="@+id/btn_color_bluepurple"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="28dp"
                android:background="#FFFFFF"
                android:layout_marginTop="20dp"
                android:src="@drawable/color_bluepurple"></ImageButton>

            <ImageButton
                android:id="@+id/btn_color_orange"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="28dp"
                android:background="#FFFFFF"
                android:layout_marginTop="20dp"
                android:layout_marginRight="28dp"
                android:src="@drawable/color_orange"></ImageButton>

        </TableRow>

        <TableRow
            android:layout_marginBottom="15dp">

            <ImageButton
                android:id="@+id/btn_color_yellow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="28dp"
                android:background="#FFFFFF"
                android:layout_marginTop="20dp"
                android:src="@drawable/color_yellow"></ImageButton>

            <ImageButton
                android:id="@+id/btn_color_purple"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="28dp"
                android:background="#FFFFFF"
                android:layout_marginTop="20dp"
                android:src="@drawable/color_purple"></ImageButton>

            <ImageButton
                android:id="@+id/btn_color_pink"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="28dp"
                android:background="#FFFFFF"
                android:layout_marginTop="20dp"
                android:layout_marginRight="28dp"
                android:src="@drawable/color_pink"></ImageButton>

        </TableRow>

    </TableLayout>

    </ScrollView>
</LinearLayout>

