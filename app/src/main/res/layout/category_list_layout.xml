<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/category_list_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/category_background"
    android:layout_marginBottom="10dp">

    <TextView
        android:id="@+id/rv_category_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="공부"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginStart="22dp"
        android:paddingVertical="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <ImageView
        android:id="@+id/rv_category_icon_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="@id/rv_category_title_tv"
        app:layout_constraintBottom_toBottomOf="@id/rv_category_title_tv"
        app:layout_constraintStart_toEndOf="@id/rv_category_title_tv"
        android:src="@drawable/ic_home_cate_study"
        android:layout_marginStart="7dp"
        />
    <ImageView
        android:id="@+id/rv_category_color_iv"
        android:layout_width="60dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/category_color_background"
        android:backgroundTint="@color/point_main"
        />



</androidx.constraintlayout.widget.ConstraintLayout>