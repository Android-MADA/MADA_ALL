<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Normal state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- 배경 색상 -->
            <corners android:radius="15dp" /> <!-- 테두리를 15dp로 깍기 -->
            <stroke
                android:color="#FDA4B4" android:width="2dp" />   <!-- 테두리 두께 -->
        </shape>
    </item>

</selector>
